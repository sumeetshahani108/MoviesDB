<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/celebrityDrawerLayout"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="com.example.user.moviesdb.HomeScreenActivity"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/celeb_textSearch"
            android:layout_width="match_parent"
            android:hint="Search"
            android:background="@color/background_color"
            android:paddingLeft="16dp"
            android:layout_height="34dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/celeb_spinner"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:background="@color/background_color"
            android:paddingLeft="8dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/celeb_recycler_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background_color"
            />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/celeb_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

