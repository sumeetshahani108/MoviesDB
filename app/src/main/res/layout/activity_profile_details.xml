<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.moviesdb.ProfileDetailsActivity"
    android:background="@color/background_color">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/profile_holder"
        android:layout_height="50dp">

        <TextView
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/line"
        android:layout_below="@+id/profile_holder"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_weight="1"
            android:background="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/profile_holder"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_marginTop="25dp"
        android:layout_height="125dp">

        <ImageView
            android:id="@+id/get_image"
            android:layout_gravity="center"
            android:layout_weight="0.87"
            android:layout_width="130dp"
            android:layout_height="120dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/get_details"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="235dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_person_white_24dp"
                android:layout_weight="0.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/get_name"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="7dp"
                android:textColor="@color/white" />
        </LinearLayout>


        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="270dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_email_white_24dp"
                android:layout_weight="0.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/get_email"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="7dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="270dp"
            android:layout_weight="1"
            android:layout_marginLeft="54dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/stat_sys_speakerphone"
                android:layout_weight="0.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/get_phone"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="7dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_gender_male_female_white_24dp"
                android:layout_weight="0.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/get_sex"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="7dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="-10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/line" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:text="SHARE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/share_button"
            android:background="@color/foreground_color" />

        <Button
            android:text="SIGN OUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signout_button"
            android:background="@color/foreground_color"
            android:layout_marginTop="5dp" />
    </LinearLayout>


</RelativeLayout>