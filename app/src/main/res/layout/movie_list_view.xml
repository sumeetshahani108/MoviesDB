<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.moviesdb.MovieDetailScreenActivity"
    android:background="@color/wallet_dim_foreground_inverse_holo_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/details">

        <TextView
            android:text="Details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">




            <TextView
                android:layout_width="match_parent"
                android:id="@+id/movie_title"
                android:layout_height="50dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:textSize="24sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="10dp"
                    android:alpha="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_star_white_24dp"
                        android:id="@+id/imageView5"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_vote_average"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:alpha="1"
                    android:layout_width="333dp"
                    android:paddingLeft="3dp" />

            </LinearLayout>

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="210dp">

                <ImageView
                    android:layout_height="200dp"
                    android:id="@+id/movie_poster_image"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:layout_marginLeft="7dp"
                    android:layout_width="320dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/movie_tagline"
                        android:layout_weight="0.20"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/movie_release_date"
                        android:layout_weight="0.20"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/movie_runtime"
                        android:layout_weight="0.20"
                        android:textColor="@android:color/white" />

                    <Button
                        android:background="@color/foreground_color"
                        android:text="Add to Favourites"
                        android:layout_width="match_parent"
                        android:id="@+id/movie_favourites"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.50"
                        android:layout_height="10dp" />

                    <Button
                        android:background="@color/foreground_color"
                        android:text="Watch Videos"
                        android:layout_width="match_parent"
                        android:id="@+id/movie_videos_button"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.50"
                        android:layout_height="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_description"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rating"
                android:layout_marginTop="5dp">

                <RatingBar
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_bar"
                    android:stepSize="1.0"
                    android:numStars="5"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="Rate"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_button"
                    android:layout_weight="0.08"
                    android:background="@color/foreground_color" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
