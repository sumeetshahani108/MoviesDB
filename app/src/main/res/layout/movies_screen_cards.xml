<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_item_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/movie_card_item"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/movie_cont_card_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movie_im_item_icon"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                />

            <TextView
                android:id="@+id/movie_lbl_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/movie_im_item_icon"
                android:paddingTop="15dp"
                android:paddingLeft="16dp"
                android:background="@color/wallet_hint_foreground_holo_dark" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>