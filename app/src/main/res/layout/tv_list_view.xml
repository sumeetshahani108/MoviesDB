<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.moviesdb.MovieDetailScreenActivity"
    android:background="@color/wallet_dim_foreground_inverse_holo_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/details"
        android:layout_height="50dp">

        <TextView
            android:text="Details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_weight="1"
        android:id="@+id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_name"
                android:layout_height="50dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:textSize="24sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="10dp"
                    android:alpha="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_star_white_24dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_vote_average"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:alpha="1"
                    android:layout_width="333dp"
                    android:paddingLeft="3dp" />

            </LinearLayout>

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="210dp">

                <ImageView
                    android:layout_height="200dp"
                    android:id="@+id/tv_poster"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:layout_width="320dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:layout_marginLeft="8dp"
                    android:layout_height="100dp">

                    <Button
                        android:background="@color/foreground_color"
                        android:text="Add to Favourites"
                        android:layout_width="match_parent"
                        android:id="@+id/tv_favourites"
                        android:layout_marginTop="10dp"
                        android:layout_height="40dp" />

                    <Button
                        android:background="@color/foreground_color"
                        android:text="Watch Videos"
                        android:layout_width="match_parent"
                        android:id="@+id/tv_videos_button"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.20"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_overview"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="24dp"
                    android:textStyle="normal|bold"
                    android:text="First air date " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/tv_first_air_date"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="24dp"
                    android:textStyle="normal|bold"
                    android:text="Last air date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/tv_last_air_date"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="24dp"
                    android:textStyle="normal|bold"
                    android:text="No of episodes" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/tv_no_of_episodes"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="24dp"
                    android:textStyle="normal|bold"
                    android:text="No of seasons" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/tv_no_of_seasons"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="24dp"
                    android:textStyle="normal|bold"
                    android:text="In production" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:id="@+id/tv_in_production"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rating"
                android:layout_marginTop="5dp">

                <RatingBar
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rating_bar"
                    android:stepSize="1.0"
                    android:numStars="5"
                    android:layout_width="wrap_content" />

                <Button
                    android:text="Rate"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_rating_button"
                    android:layout_weight="0.08"
                    android:background="@color/foreground_color" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
